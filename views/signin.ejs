<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <link rel="stylesheet" href="/styles/signin.css" />
  </head>
  <body>
    <div class="content">
      <nav><p>Kyle</p></nav>
      <div class="welcome">
        <p><span>Welcome.</span> <br />Shop with us.</p>
      </div>
      <div class="form">
        <form action="/signUp" method="post">
          <div class="sign-in-info">
            <p class="head">Sign In</p>
            <p>
              <label id="lblusernameSignin" for="usernameSignin"
                >Username:
              </label>
              <input
                id="usernameSignin"
                name="usernameSignin"
                type="text"
                maxlength="20"
                placeholder="Enter username or email..."
                required
              />
            </p>
            <p>
              <label for="password">Password: </label>
              <input
                id="passwordSignin"
                name="passwordSignin"
                type="password"
                minlength="6"
                placeholder="Enter your password..."
                required
              />
            </p>

            <p>
              <button id="sign-in-btn">Sign in</button>
            </p>
            <div class="switch">
              <p>Don't have an account? <span class="sign-up">Sign up</span></p>
            </div>
          </div>
        </form>
      </div>
    </div>
    <script>
      const username = document.getElementById("username");
      const usernameInfo = document.getElementsByClassName("username-info")[0];
      const email = document.getElementById("email");
      const password = document.getElementById("password");
      const confirmPass = document.getElementById("confirm-password");
      const confirmInfo = document.getElementsByClassName(
        "confirm-password-info"
      )[0];
      const signin = document.getElementsByClassName("sign-in")[0];
      const signup = document.getElementsByClassName("sign-up")[0];

      //Switch to signing up
      signup.addEventListener("click", () => {
        window.location.href = "/signUp";
      });
    </script>
  </body>
</html>
